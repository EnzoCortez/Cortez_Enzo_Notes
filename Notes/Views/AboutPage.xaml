<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notes.Views.AboutPage"
             Title="About">
    <VerticalStackLayout Spacing="20" Padding="20">
        <!-- Imagen -->
        <Image Source="images.png"
               HeightRequest="300"
               HorizontalOptions="Center" />

        <!-- Nombre -->
        <Label Text="Enzo Cortez"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <!-- Descripción -->
        <Label Text="Soy un desarrollador apasionado por la tecnología y el aprendizaje continuo. Esta aplicación de notas es un ejemplo de mis proyectos realizados con .NET MAUI."
               FontSize="18"
               HorizontalOptions="Center"
               TextColor="Gray"
               HorizontalTextAlignment="Center" />

    </VerticalStackLayout>
</ContentPage>
